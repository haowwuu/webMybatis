<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<base href="<%=basePath%>">

<title>service contents</title>
<!-- <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="cache-control" content="no-cache">
    <meta http-equiv="expires" content="0">     -->
<meta http-equiv="keywords" content="dsp,contents,service">
<meta http-equiv="description" content="dsp main page">
<meta name="renderer" content="webkit">
<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">

<link rel="stylesheet" type="text/css" href="<%=basePath%>resources/css/jquery.dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="<%=basePath%>resources/css/dataTables.bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="<%=basePath%>resources/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="<%=basePath%>resources/css/dsp.css" />
<!-- CSS for the Vertical tab -->
<link rel="stylesheet" type="text/css" href=" <%=basePath%>resources/css/serviceTab.css" />

<%-- <script type="text/javascript" src="<%=basePath%>js/jquery-1.11.1.min.js"></script> --%>
<script type="text/javascript" src="<%=basePath%>js/jquery-1.12.3.js"></script>
<script type="text/javascript"
	src="<%=basePath%>js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="<%=basePath%>js/bootstrap.js"></script>
<script type="text/javascript"
	src="<%=basePath%>js/dataTables.bootstrap.min.js"></script>

</head>
<body>
	<header> 
	<nav class="navbar navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header">
			<a class="navbar-brand" href="#">数据共享平台</a>
		</div>
	</div>
	</nav> 
	</header>

	<div id="contents" class="container-fluid">
		<div class="panel panel-default">
			<div class="panel-body">
				<form id="serviceForm" class="form-inline col-md-7" role="form">
					<input type="text" name="metaDataPath"
						class="form-control col-md-10" style="min-width: 350px;"
						placeholder="请输入元数据地址" data-toggle="tooltip" title="服务发布成功" /> <input
						type="Button" name="submit" class="btn btn-primary col-md-2"
						value="发布" />
				</form>

				<div class="input-group" class="col-md-5">
					<span class="input-group-addon">搜索</span> <input id="searchInput" type="text" class="form-control" placeholder="查询接口">
				</div>
			</div>
		</div>

		<!--  print interface information -->
		<div id="hero-slider">
			<ul id="interfaceNumber"></ul>
			<div class="mask">
				<div class="slider-body" id="interfaceInformation"></div>
			</div>
			<!-- .mask -->
			<div class="clear"></div>
		</div>
		<!-- #hero-slider -->

		<footer> 
		<nav  class="navbar navbar-inverse navbar-fixed-bottom">
		<div class="navbar-inner navbar-content-center">
			<div class="text-center">
				© <span>2016</span> <a href="http://www.cetiti.com/">中电海康集团有限公司</a>,Inc.
				All Rights Reserved.
			</div>
		</div>
		</nav> </footer>

		<script type="text/javascript">
    var i;
    function currentInterface(i){
        $("#interface"+i).toggleClass('active');
        for(var num = 1; num < interfaceNumber+1; num++){
        	if(num==i) continue;
        	$("#interface"+num).removeClass('active');
        	}
        }
    
    $(function(){
        $("#serviceForm input[name='submit']").click(function(){
            Service.publish();
            });
       Service.show();
        // Event listener to the two range filtering inputs to redraw on input 
      $("#searchInput").keyup( function() {
        var search = $("#searchInput").val();
        document.getElementById("interfaceNumber").innerHTML ="";
        document.getElementById("interfaceInformation").innerHTML ="";
        var serviceData = $.extend(true, {}, tempData);
        $.extend(serviceData,tempData);
        for (var i=1;i<serviceData.data.length+1;i++){
          if((serviceData.data[i-1].restApiName.indexOf(search)>=0)
            ||(serviceData.data[i-1].soapApiName.indexOf(search)>=0)
            ||(serviceData.data[i-1].parameters.indexOf(search)>=0)
            ||(serviceData.data[i-1].sqlType.indexOf(search)>=0)
            ||(serviceData.data[i-1].dataSource.indexOf(search)>=0)
            ||(serviceData.data[i-1].metadataFile.indexOf(search)>=0)
            ||(serviceData.data[i-1].sqlText.indexOf(search)>=0)){ 
          if (1==i){
        	        txt1="<li ><a href=\"#panel-1\"  id=\"interface1\"  class=\"active\"  onClick=\"currentInterface(1)\"</a></li>";
        	}
          else{
        	        txt1="<li><a href=\"#panel-&num&\"  id=\"interface&num&\"  onClick=\"currentInterface(&num&)\"></a></li>";
        	}
          var text1=txt1.replace(/&num&/g , i.toString());
          document.getElementById("interfaceNumber").innerHTML +=text1;     
          var t1 ="<div class=\"panel\" id=\"panel-num\">"+ "<h2>接口num   (&selectId&)信息</h2>";
          var t2 ="<p id=\"restApiName\"><a href= &restApiName&  target=\"_blank\">REST接口地址</a></p>";
          var t3 ="<p id=\"soapApiName\"><a href= &soapApiName&  target=\"_blank\">SOAP接口地址</a></p>";
          var t4 ="<p>参数</p>"+"<p1 id=\"outputParamters\">&outputParamters&</p1>";
          var t5 ="<p>类型</p>"+"<p1 id=\"type\">&type&</p1>";
          var t6 ="<p>数据源</p>"+"<p1 id=\"dataSource\">&dataSource&</p1>";
          var t7 ="<p id=\"dataDescriptionFile\"><a href=&dataDescriptionFile&  target=\"_blank\">数据描述文件</a></p>";
          var t8 ="<p> <a  data-toggle=\"tooltip\"  data-placement=\"bottom\"  title=\"&SQLStatments&\">SQL语句 </a></p>"+"</div>";
          var template = t1 + t2 + t3 + t4 + t5 + t6 + t7 + t8;			
          var tr = template.replace(/num/g , i.toString())
                        .replace("&restApiName&", serviceData.data[i-1].restApiName)
						.replace("&soapApiName&", serviceData.data[i-1].soapApiName)
						.replace("&outputParamters&",  serviceData.data[i-1].parameters)
						.replace("&type&",  serviceData.data[i-1].sqlType)
						.replace("&dataSource&",  serviceData.data[i-1].dataSource)
						.replace("&dataDescriptionFile&",  serviceData.data[i-1].metadataFile)
						.replace("&SQLStatments&",  serviceData.data[i-1].sqlText);
          document.getElementById("interfaceInformation").innerHTML +=tr;			
          }	
        }
      });
    });
    	
    $.fn.dataTable.ext.search.push(
      function( settings, serviceData, dataIndex ) {
        var search = $("#searchInput").val();
        for(i in serviceData){
          if(serviceData[i].indexOf(search)<0){
            serviceData[i]="";		
          }
        }	
        for(i in serviceData){
          if(serviceData[i].indexOf(search)>=0){
            return true;
          }
        }
        return false;
      }
    );

    var tempData; 
    var interfaceNumber;
    var Service={
      show:function(){
      var input = $("#serviceForm input[name='metaDataPath']");
      var v = input.val();
      $.post("content", {metaDataPath:v}, function(data){
         //object clone 
        tempData = $.extend(true, {}, data);
        //HTML   begin
        for (var i=1;i<data.data.length+1;i++){
          interfaceNumber =data.data.length;
          //left  portion of the Vertical tab			
          if (1==i){
            txt1="<li ><a href=\"#panel-1\"  id=\"interface1\"  class=\"active\"  onClick=\"currentInterface(1)\"</a></li>";
            }
          else{
            txt1="<li><a href=\"#panel-&num&\"  id=\"interface&num&\"  onClick=\"currentInterface(&num&)\"></a></li>";
            }
          var text1=txt1.replace(/&num&/g , i.toString());
          document.getElementById("interfaceNumber").innerHTML +=text1;
          // right  portion of the Vertical tab	 	
          //template
          var t1 ="<div class=\"panel\" id=\"panel-num\">"+ "<h2>接口num   (&selectId&)信息</h2>";
          var t2 ="<p id=\"restApiName\"><a href= &restApiName&  target=\"_blank\">REST接口地址</a></p>";
          var t3 ="<p id=\"soapApiName\"><a href= &soapApiName&  target=\"_blank\">SOAP接口地址</a></p>";
          var t4 ="<p>参数</p>"+"<p1 id=\"outputParamters\">&outputParamters&</p1>";
          var t5 ="<p>类型</p>"+"<p1 id=\"type\">&type&</p1>";
          var t6 ="<p>数据源</p>"+"<p1 id=\"dataSource\">&dataSource&</p1>";
          var t7 ="<p id=\"dataDescriptionFile\"><a href=&dataDescriptionFile&  target=\"_blank\">数据描述文件</a></p>";
          var t8 ="<p> <a  data-toggle=\"tooltip\"  data-placement=\"bottom\"  title=\"&SQLStatments&\">SQL语句 </a></p>"+"</div>";
          var template = t1 + t2 + t3 + t4 + t5 + t6 + t7 + t8;			
          var tr = template.replace(/num/g , i.toString())
                        .replace("&restApiName&", data.data[i-1].restApiName)
                        .replace("&soapApiName&", data.data[i-1].soapApiName)
						.replace("&outputParamters&",  data.data[i-1].parameters)
						.replace("&type&",  data.data[i-1].sqlType)
						.replace("&dataSource&",  data.data[i-1].dataSource)
						.replace("&dataDescriptionFile&",  data.data[i-1].metadataFile)
						.replace("&SQLStatments&",  data.data[i-1].sqlText)
                        .replace(/&selectId&/g , data.data[i-1].selectId);
          document.getElementById("interfaceInformation").innerHTML +=tr;
          // the end	
           }	
        },"json");	
      },
      publish:function(){
        var input = $("#serviceForm input[name='metaDataPath']");
        var v = input.val();
        $.post("publish", {metaDataPath:v}, function(data){
            if(data.resultcode==0){
              input.tooltip('show');
              //Service.show();
              location.reload();
            }
            else{
              input.tooltip('destroy');
              input.attr('title', "服务发布失败, message:"+data.message);
			  input.tooltip('show');
		    }
        }, "json")
      }
    }

 </script>
</body>
</html>
